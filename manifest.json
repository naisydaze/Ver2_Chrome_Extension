{
  "name": "VER2 extension",
  "description": "A customisable self-improvement extension",
  "version": "1.0",
  "permissions": ["storage", "alarms", "notifications"],
  "manifest_version": 3,
  "web_accessible_resources": [
  {
    "resources": ["harmony.png"],
    "matches": ["<all_urls>"]
  }
  ],
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": "harmony.png"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "host_permissions": ["https://naisydaze.github.io/Ver2_Chrome_Extension/"]
}